@model BlogBlog.Models.postViewmodel

@{
    ViewBag.Title = "Details";
}
<style>
    .prettyprint {
        direction: ltr;
        text-align: left;
        width: 100%
    }
    #toast-container{
        width:500px;
    }
    .toast-success {
        width: 100%;
    }
</style>
<section class="blog_area single-post-area p_120">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list" style="text-align: right;">
                <div class="single-post row">
                    <div class="col-lg-12">
                        <div class="feature-img">
                            <img class="img-fluid" src="../../@Html.DisplayFor(model => model.Img)" alt="">
                        </div>
                    </div>
                    <div class="col-lg-3  col-md-3">
                        <div class="blog_info text-right">
                            <div class="post_tag" style="text-align: end;">

                                <a class="active" href="#">@Html.DisplayFor(model => model.Category)</a>
                                <input type="hidden" value="@Html.DisplayFor(model => model.id)" id="postid" />
                            </div>
                            <ul class="blog_meta list" style="text-align: end;">
                                <li><a href="#" style="font-family: Vazir;">@Html.DisplayFor(model => model.WriterName)<i class="lnr lnr-user"></i></a></li>
                                <li><a href="#" style="font-family: Vazir;">@Html.DisplayFor(model => model.DatedPost)<i class="lnr lnr-calendar-full"></i></a></li>
                                <li><a href="#" style="font-family: Vazir;">- بازدید<i class="lnr lnr-eye"></i></a></li>
                                <li><a href="#" style="font-family: Vazir;">@Html.DisplayFor(model => model.commentsNumber)<i class="lnr lnr-bubble"></i></a></li>
                            </ul>
                            <ul class="social-links" style="text-align: end;">
                                <li><a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a><script async src="../../js/widgets.js" charset="utf-8"></script></li>

                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 blog_details" style="direction:rtl">
                        @Html.Raw(Model.Text)
                    </div>
                    <div class="col-lg-12" style="direction: rtl;">
                        <div class="quotes">
                            @Html.Raw(Model.quote)
                        </div>
                        <div class="row" style="text-align:right;direction:rtl;">
                            @Html.Raw(Model.text2)
                        </div>
                    </div>
                </div>
