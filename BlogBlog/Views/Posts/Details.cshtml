                <div class="comments-area" style="direction: rtl;">
                    <h4>@Html.DisplayFor(model => model.commentsNumber) نظر</h4>
                    @foreach (var item in Model.Comments)
                    {
                        <div class="comment-list">
                            <div class="single-comment justify-content-between d-flex">
                                <div class="user justify-content-between d-flex">
                                    <div class="thumb" style="    margin-left: 20px;    margin-right: 0px;">
                                        <img src="../../img/blog/icons8-avatar-480.png"width="40px;">
                                    </div>
                                    <div class="desc">
                                        <h5> @Html.DisplayFor(modelItem => item.WriterName) </h5>
                                        <p class="date"> @Html.DisplayFor(modelItem => item.Date)  </p>
                                        <p class="comment">
                                            @Html.DisplayFor(modelItem => item.Message)
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="comment-form" style="direction:rtl;">
                    <h4>نظر خود را درباره این پست بنویسید .</h4>
                    <form>
                        <div class="form-group form-inline">
                            <div class="form-group col-lg-6 col-md-6 name">
                                <input type="text" class="form-control" id="name" placeholder="نام" onfocus="this.placeholder = ''" onblur="this.placeholder = 'نام'">
                            </div>
                            <div class="form-group col-lg-6 col-md-6 email">
                                <input type="email" class="form-control" id="email" placeholder="ایمیل" onfocus="this.placeholder = ''" onblur="this.placeholder = 'ایمیل'">
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control mb-10" id="writerText" rows="5" name="message" placeholder="متن" onfocus="this.placeholder = ''" onblur="this.placeholder = 'متن'" required=""></textarea>
                        </div>
                        <a onclick="ShowCurrentTime()" style="color:black;" class="primary-btn submit_btn">ثبت نظر</a>
                    </form>
                </div>
            </div>
            @Html.Action("SideBar")
        </div>
    </div>
</section>
<script type="text/javascript">
    function ShowCurrentTime() {
        //alert(window.location.pathname);
        var writerName = $('#name').val();
        var writerEmail = $('#email').val();
        var writerText = $('#writerText').val();
        var writerPosiId = $('#postid').val();
        var jsonData = {CommentsId: 0 ,
                        WriterName:   writerName  , 
                        Email:  writerEmail  ,
                        subject: '-',
                        Date: '-',
                        Message :  writerText ,
                        PostId: parseInt( writerPosiId) } ;
        console.log(jsonData);
        $.ajax({
            type: "POST",
            url: "/Posts/comment",
            data: jsonData,
            success: function (data) {
                toastr.success('نظر شما پس از تایید نمایش داده میشود :)', 'SEPPPPII')
            }
        });
    }
  
</script>